<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardBackgroundColor="#23C0C0C0"
    android:foreground="?android:attr/selectableItemBackground"

    android:id="@+id/friendsRootLayout"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    android:maxHeight="100dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rainbowx.finalwork.Views.AvatarView
            android:id="@+id/friendsAvatarImg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/style_avatar"
            android:src="@drawable/ic_launcher_background" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/friendsTextNickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="昵称"/>
            <TextView
                android:id="@+id/friendsTextSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个性签名"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>